<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:keepScreenOn="true"
    tools:context=".mcqs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/Mcq1"
                android:onClick="auditing_mcqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:lineSpacingExtra="1dp"
                android:text="Auditing MCQS"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/Mcq2"
                android:onClick="cost_auditing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:textColor="@color/white"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="Cost Accounting MCQS"
                android:textSize="18dp" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView_mcq1"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/Mcq3"
                android:onClick="principle_auditing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:textColor="@color/white"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="Principle of Auditing MCQS"
                android:textSize="18dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/Mcq4"
                android:onClick="financial_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="financial management MCQS"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/Mcq5"
                android:onClick="mix_auditing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="MIX 150 Accounting and Auditing MCQS"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView_mcq2"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id2"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <com.github.barteksc.pdfviewer.PDFView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/pdfmcqs"/>

</RelativeLayout>