<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="learnhubstudio.auditing.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/chapter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:lineSpacingExtra="1dp"
                android:text="chapter 1 \nAuditing I"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/chapter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:textColor="@color/white"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 2 \nAuditing II"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:textColor="@color/white"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 3 \nAudit planing"
                android:textSize="18dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/chapter4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 4 \nAduting Techniques"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 5 \nInternal Control"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                android:layout_margin="10dp"
                ads:adUnitId="@string/banner_ad_unit_id"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/chapter6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 6 \nVouching"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 7 \nVerification and Valuation"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 8 \nCompany Audit"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 9 \nCost Accounting"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 10 \nCost and cost Classification "
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 11 \nReconcilation of profit as per cost"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id2"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>


            <Button
                android:id="@+id/chapter12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 12 \nMaterial,labour and overheads"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 13 \nMethord of costing "
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/chapter14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/menubtn"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:text="chapter 14 \nElemement principal and techniques "
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
